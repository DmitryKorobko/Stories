<!DOCTYPE html>
<html>
  <head>
    <title>Stories</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,300,500,700" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div class="supporting-section">
      <h3>Header menu</h3>
      <ul>
        <li><%= link_to "Home", "/" %></li>
        <li><%= link_to "About", "/pages/about" %></li>
        <li><%= link_to "Contact", "/pages/contact" %></li>
        <li><%= link_to "Sign Up", "/signups/new" %></li>
      </ul>
    </div>
  </header>

  <body>
    <%= yield %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
  <footer>
    <h4>Footer</h4>
  </footer>
</html>
